@page "/calendar"
@using DxBlazorApp.Data
@rendermode InteractiveServer

<PageTitle>Calendar</PageTitle>

<h1>Calendar</h1>

@if (_entries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <DxGrid Data="@_entries"
            CssClass="mw-1100">
        <Columns>
            <DxGridDataColumn Caption="Mitarbeiter" FieldName="Employee"/>
            <DxGridDataColumn Caption="Begin" FieldName="Begin"/>
            <DxGridDataColumn Caption="Ende" FieldName="End"/>
        </Columns>
    </DxGrid>

    <DxGridLayout>
        <Rows>
            <DxGridLayoutRow Height="auto"/>
            <DxGridLayoutRow Height="auto"/>
            <DxGridLayoutRow Height="auto"/>
            <DxGridLayoutRow Height="20px"/>
            <DxGridLayoutRow Height="auto"/>
        </Rows>
        <Columns>
            <DxGridLayoutColumn Width="auto"/>
            <DxGridLayoutColumn Width="auto"/>
        </Columns>
        <Items>
            <DxGridLayoutItem Row="0" Column="0">
                <Template>
                    <label>Beginn: </label>
                </Template>
            </DxGridLayoutItem>

            <DxGridLayoutItem Row="0" Column="1">
                <Template>
                    <InputDate @bind-Value="Begin"
                               DisplayName="Beginn"/>
                </Template>
            </DxGridLayoutItem>

            <DxGridLayoutItem Row="1" Column="0">
                <Template>
                    <label>Ende: </label>
                </Template>
            </DxGridLayoutItem>

            <DxGridLayoutItem Row="1" Column="1">
                <Template>
                    <InputDate @bind-Value="End"
                               DisplayName="Ende"/>
                </Template>
            </DxGridLayoutItem>

            <DxGridLayoutItem Row="2" Column="0" ColumnSpan="2">
                <Template>
                    <DxButton Click="SaveEntry" >Speichern</DxButton>
                </Template>
            </DxGridLayoutItem>


            <DxGridLayoutItem Row="4" Column="0" ColumnSpan="2">
                <Template>
                    <DxButton Click="OpenUploadWindow" >Upload</DxButton>
                </Template>
            </DxGridLayoutItem>
        </Items>
    </DxGridLayout>

    <DxWindow @ref=windowRef
              AllowResize="true"
              ShowCloseButton="true"
              CloseOnEscape="true"
              HeaderText="Upload"
              FooterText="Footer"
              ShowFooter="true"
              Width="max(25vw, 250px)"
              MinWidth="300"
              MinHeight="200"
              MaxWidth="800"
              MaxHeight="500"
              @bind-Visible=windowVisible>
        <BodyContentTemplate>
            <div class="d-flex flex-fill pt-1 pb-2 w-100">
                <div id="overviewDemoDropZone" class="card custom-drop-zone rounded-3 w-100 m-0">
                    <span class="drop-file-icon mb-3"></span>
                    <span class="drop-file-label" >Ziehe eine Datei hierein</span>
                    <span class="m-1">oder</span>
                    <DxButton Id="overviewDemoSelectButton"
                              CssClass="m-1"
                              RenderStyle="ButtonRenderStyle.Primary"
                              Text="WÃ¤hle Datei"
                              />
                </div>
                <DxFileInput
                    Visible="@UploadVisible"
                    ExternalSelectButtonCssSelector="#overviewDemoSelectButton"
                    ExternalDropZoneCssSelector="#overviewDemoDropZone"
                    ExternalDropZoneDragOverCssClass="custom-drop-zone-hover"
                    MaxFileSize="1000000"
                    FilesUploading="OnFilesUploading"
                    SelectedFilesChanged="@SelectedFilesChanged"
                    ShowSelectButton="false"
                    AllowedFileExtensions="@(new List<string> { ".ics" })">
                </DxFileInput>
            </div>
        </BodyContentTemplate>
        <FooterContentTemplate>
            <DxButton CssClass="popup-button my-1 ms-2" RenderStyle="ButtonRenderStyle.Primary" Text="OK" Click="@context.CloseCallback" />
            <DxButton CssClass="popup-button my-1 ms-2" RenderStyle="ButtonRenderStyle.Secondary" Text="Cancel" Click="@context.CloseCallback" />
        </FooterContentTemplate>
    </DxWindow>
}